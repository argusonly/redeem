<style>
.col-lg-12{ margin-bottom: 20px;}
.col-lg-12 .input-1{width: 15%; display: inline;}
</style>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <form action="../taikooli/public/admin/consumer/index" method="get">
        <input type="text" name="serial_num" value="" placeholder="流水号" class="form-control input-1">
        <input type="text" name="storecode" value="" placeholder="店铺code" class="form-control input-1">
        <input type="text" name="store_name" value="" placeholder="店铺名" class="form-control input-1">
        <input type="submit"  disabled="disabled" id="addSysem" class="btn btn-success btn-xm" value="搜索" /></form>
    </div>
    <div class="col-lg-12">
      <div class="panel panel-default">
        <table id="tableRecords" class="table table-striped table-condensed table-hover" width="100%"></table>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
$(document).ready(function() {
  var oTable = $('#tableRecords').DataTable({
    //bFilter: false,
    "columnDefs": [{
      "title": "ID",
      "targets": 0,
      "orderable": true,
      "searchable": false
    },
    {
      "title": "用户名",
      "targets": 1,
      "orderable": true,
      "searchable": true
    },
    {
      "title": "流水号",
      "targets": 2,
      "orderable": true,
      "searchable": true
    },
    {
      "title": "消费金额",
      "targets": 3,
      "orderable": true,
      "searchable": true
    },
    {
      "title": "店铺code",
      "targets": 4,
      "orderable": false,
      "searchable": false
    },
    {
      "title": "店铺名",
      "targets": 5,
      "orderable": false,
      "searchable": false
    },
    {
      "title": "添加时间",
      "targets": 6,
      "orderable": false,
      "searchable": false
    },
    {
      "title": "操作",
      "targets": 7,
      "orderable": false,
      "searchable": false
    },
    ],
    "stateSave": true,
    "order": [[0, "desc"]],
    "serverSide": false,
    //true代表后台处理分页，false代表前台处理分页
    "iDisplayLength": 20,
    // 每页显示多少条
    "iDisplayStart": 0,
    "ajax": window.ServerAPI.server + "/api/v1/list/consume",
    "drawCallback": function(settings) {
      $("#tableRecords_filter").hide();
      $(".iframe").off('click').on('click',
      function(event) {
        event.preventDefault();
        var url = $(this).attr('href');
        var type = BootstrapDialog.TYPE_PRIMARY;
        if ($(this).attr('title') == '编辑') type = BootstrapDialog.TYPE_PRIMARY;
        if ($(this).attr('title') == '删除') type = BootstrapDialog.TYPE_DANGER;
        BootstrapDialog.show({
          title: $(this).attr('title') + '店铺管理',
          message: $('<div></div>').load(url),
          type: type,
        });
      });
    }
  });

  var foot = $('#tableRecords').find('tfoot');
  if (!foot.length) {
    foot = $('<tfoot>').appendTo($('#tableRecords'));
    var tr = $("<tr></tr>");
    for (var i = 0; i < $('#tableRecords thead th').length; i++) {
      $('<th>').appendTo(tr);
    }
    foot.append(tr);
  }

});
</script>
